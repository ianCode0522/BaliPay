<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Top Green Bar -->
        <View
            android:id="@+id/topBar"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:background="@color/primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="@color/white"
            android:padding="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Group Name -->
        <TextView
            android:id="@+id/tvGroupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Family Savings"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Contribution -->
        <TextView
            android:id="@+id/tvContribution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚±500"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvGroupName"
            app:layout_constraintStart_toStartOf="@id/tvGroupName" />

        <TextView
            android:id="@+id/tvSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weekly"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@id/tvContribution"
            app:layout_constraintBottom_toBottomOf="@id/tvContribution"
            app:layout_constraintStart_toEndOf="@id/tvContribution" />

        <!-- Current Payout Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCurrentPayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:backgroundTint="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tvSchedule"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This Week's Payout"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCurrentRecipient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Juan Dela Cruz"
                    android:textSize="20sp"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvPayoutAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Receives: â‚±5,000"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="4dp" />

                <!-- Claim Payout Button -->
                <Button
                    android:id="@+id/btnClaimPayout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Claim Payout"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/button_primary"
                    android:layout_marginTop="16dp"
                    android:visibility="gone" />

                <!-- Payment Amount Input -->
                <TextView
                    android:id="@+id/tvPaymentLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Amount"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/etPaymentAmount"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Enter amount (â‚±)"
                    android:inputType="numberDecimal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_hint"
                    android:background="@drawable/input_background"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />

                <!-- Mark as Paid Button -->
                <Button
                    android:id="@+id/btnMarkPaid"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Submit Payment"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/button_primary"
                    android:layout_marginTop="12dp"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Payment Summary Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPaymentSummary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:backgroundTint="@color/white"
            app:layout_constraintTop_toBottomOf="@id/cardCurrentPayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’° This Week's Collection"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Collected"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvTotalCollected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚±0.00"
                            android:textSize="16sp"
                            android:textColor="@color/success"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Still Needed"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvStillNeeded"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚±0.00"
                            android:textSize="16sp"
                            android:textColor="@color/error"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvMembersPaid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Members Paid: 0/0"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="12dp" />

                <!-- Waiting Message -->
                <TextView
                    android:id="@+id/tvWaitingMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â³ Waiting for 3 more members to join..."
                    android:textSize="14sp"
                    android:textColor="@color/warning"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/input_background"
                    android:layout_marginTop="12dp"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Group Code Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardGroupCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:backgroundTint="@color/white"
            app:layout_constraintTop_toBottomOf="@id/cardPaymentSummary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Group Code"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvGroupCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ABC123"
                    android:textSize="20sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    android:layout_marginTop="8dp" />

                <Button
                    android:id="@+id/btnCopyCode"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Copy Code"
                    android:textSize="14sp"
                    android:textColor="@color/primary"
                    android:background="@android:color/transparent"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <!-- Admin Manage Payments Button -->
                <Button
                    android:id="@+id/btnManagePayments"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Manage Payment Requests"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/button_primary"
                    android:layout_marginTop="12dp"
                    android:visibility="gone" />

                <!-- Admin Self Payment Section -->
                <TextView
                    android:id="@+id/tvAdminPaymentLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Payment"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/etAdminPaymentAmount"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Enter amount (â‚±)"
                    android:inputType="numberDecimal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_hint"
                    android:background="@drawable/input_background"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnAdminMarkPaid"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Mark as Paid"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/button_primary"
                    android:layout_marginTop="12dp"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Contribution Status Section -->
        <TextView
            android:id="@+id/tvContributionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contribution Status"
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/cardGroupCode"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Contribution List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvContributions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:nestedScrollingEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/tvContributionLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Payout Schedule Section -->
        <TextView
            android:id="@+id/tvPayoutScheduleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payout Schedule"
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/rvContributions"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Payout Schedule List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPayoutSchedule"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:nestedScrollingEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/tvPayoutScheduleLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>