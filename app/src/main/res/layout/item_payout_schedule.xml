<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    android:backgroundTint="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Week Number -->
        <TextView
            android:id="@+id/tvWeekNumber"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="1"
            android:textSize="18sp"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/icon_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Member Name -->
        <TextView
            android:id="@+id/tvRecipientName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Juan Dela Cruz"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvWeekNumber"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Payout Amount -->
        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚±5,000"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvRecipientName"
            app:layout_constraintStart_toStartOf="@id/tvRecipientName" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>